{
  "name": "chronicler-server",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "start": "PORT=3003 node dist/index.js",
    "type-check": "tsc --noEmit",
    "lint": "oxlint --type-aware",
    "lint:fix": "oxlint --type-aware --fix",
    "schema:inspect": "atlas schema inspect --env dev",
    "schema:push": "atlas schema push --env dev",
    "schema:apply": "atlas schema apply --env dev --auto-approve",
    "schema:plan": "atlas schema apply --env dev --dry-run",
    "schema:diff": "atlas schema diff --env dev"
  },
  "dependencies": {
    "@types/pg": "^8.15.5",
    "better-auth": "^1.3.7",
    "dotenv": "^17.2.1",
    "hono": "^4.9.1",
    "kysely": "^0.27.4",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@hono/vite-dev-server": "^0.20.1",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^24.0.0",
    "typescript": "5.5.4",
    "vite": "^5.0.0"
  }
}
