{
  "name": "null-horizon-server",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "start": "PORT=3001 node dist/index.js",
    "test": "vitest",
    "test:run": "vitest run",
    "type-check": "tsc --noEmit",
    "lint": "oxlint --type-aware",
    "lint:fix": "oxlint --type-aware --fix",
    "migrate:diff": "atlas migrate diff --env dev",
    "migrate:apply": "atlas migrate apply --env dev",
    "migrate:status": "atlas migrate status --env dev",
    "schema:inspect": "atlas schema inspect --env dev",
    "schema:push": "atlas schema push --env dev",
    "schema:apply": "atlas schema apply --env dev --auto-approve",
    "schema:plan": "atlas schema apply --env dev --dry-run",
    "schema:diff": "atlas schema diff --env dev"
  },
  "dependencies": {
    "@types/pg": "catalog:backend",
    "better-auth": "catalog:backend",
    "dotenv": "catalog:backend",
    "hono": "catalog:backend",
    "kysely": "catalog:backend",
    "pg": "catalog:backend"
  },
  "devDependencies": {
    "@hono/vite-dev-server": "catalog:backend",
    "@repo/typescript-config": "workspace:*",
    "@testcontainers/postgresql": "catalog:testing",
    "@types/node": "catalog:build",
    "testcontainers": "catalog:testing",
    "typescript": "catalog:build",
    "vite": "catalog:build",
    "vitest": "catalog:testing"
  }
}
